{
  "data_dir": "logs/performance",
  "retention_days": 90,
  "min_samples": 3,
  "confidence_level": 0.95,
  "default_thresholds": {
    "low": 5.0,
    "medium": 15.0,
    "high": 30.0,
    "critical": 50.0
  },
  "benchmarks": [
    {
      "name": "theme_loading",
      "test_pattern": "test_theme_loading_benchmark",
      "timeout": 60,
      "min_iterations": 5,
      "max_iterations": 10,
      "warmup_iterations": 1,
      "enabled": true,
      "custom_thresholds": null
    },
    {
      "name": "large_theme_loading",
      "test_pattern": "test_large_theme_loading_benchmark",
      "timeout": 120,
      "min_iterations": 3,
      "max_iterations": 10,
      "warmup_iterations": 1,
      "enabled": true,
      "custom_thresholds": null
    },
    {
      "name": "theme_validation",
      "test_pattern": "test_theme_validation_benchmark",
      "timeout": 30,
      "min_iterations": 5,
      "max_iterations": 10,
      "warmup_iterations": 1,
      "enabled": true,
      "custom_thresholds": null
    },
    {
      "name": "css_generation",
      "test_pattern": "test_css_generation_benchmark",
      "timeout": 60,
      "min_iterations": 3,
      "max_iterations": 10,
      "warmup_iterations": 1,
      "enabled": true,
      "custom_thresholds": null
    },
    {
      "name": "theme_export",
      "test_pattern": "test_theme_export_benchmark",
      "timeout": 60,
      "min_iterations": 3,
      "max_iterations": 10,
      "warmup_iterations": 1,
      "enabled": true,
      "custom_thresholds": null
    },
    {
      "name": "file_operations",
      "test_pattern": "test_file_*_benchmark",
      "timeout": 30,
      "min_iterations": 5,
      "max_iterations": 10,
      "warmup_iterations": 1,
      "enabled": true,
      "custom_thresholds": null
    },
    {
      "name": "memory_usage",
      "test_pattern": "test_*_memory_*_benchmark",
      "timeout": 120,
      "min_iterations": 3,
      "max_iterations": 10,
      "warmup_iterations": 1,
      "enabled": true,
      "custom_thresholds": {
        "low": 10.0,
        "medium": 25.0,
        "high": 50.0,
        "critical": 75.0
      }
    }
  ],
  "alerts": {
    "enabled": true,
    "email_notifications": false,
    "slack_webhook": null,
    "github_issues": false,
    "severity_levels": [
      "MEDIUM",
      "HIGH",
      "CRITICAL"
    ]
  }
}